# Blog System Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_PASSWORD=your_mysql_password_here

# JWT Configuration (IMPORTANT: Use a strong, random secret!)
# Generate a new secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long

# Redis Configuration (Optional - needed for token blacklist feature)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Aliyun OSS Configuration (Optional - for file uploads)
OSS_ENDPOINT=
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_BUCKET_NAME=
OSS_DOMAIN_NAME=

# Login Security Configuration
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCK_TIME=30

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760